<% if session[:depth] != 0 %>
    <div id="breadcrumbs">
      <%= session[:depth] %>
      <%= link_to("Clear", "clear") %>
      <%= session[:breadcrumb].gsub(";", " >> ") %>
    </div>
<% end %>
<div id="worst">
  <%= link_to image_tag("bad-egg-icon.png", :border => 0), {:action => ("worst")}, :class => "my-link"%>
</div>
<%= form_tag 'index', :method => 'get' do %>
    <div id="search">
      <%= label_tag("Location: ") %>
      <%= text_field_tag("search_term") %>
      <%= submit_tag("Search") %>
    </div>
<% end %>
